<view>
  <view class="section">
    <label class="section-title">选择时间</label>
    <input class="section-input" controlled="{{true}}" value="{{date}}" placeholder="请选择" placeholder-style="margin-right: 5px" onFocus="datePick"/>
  </view>
  <view class="button">
    <button type="primary" onTap="query">查询</button>
  </view>
  <list>
    <block a:for="{{items}}">
      <list-item
        key="item-{{index}}"
        index="{{index}}"
        last="{{index === (items.length - 1)}}">
        {{item.title}}
        <view class="am-list-brief">{{item.brief}}</view>
        <view slot="extra">
          <button size="mini" class="mark-btn" line="{{index}}" onTap="onItemClick">{{item.btnLabel}}</button>
        </view>
      </list-item>
    </block>
    <view class="list-footer" slot="footer">合计：100</view>
  </list>
</view>